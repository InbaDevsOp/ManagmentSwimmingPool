<div class ="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
        
        <form id="addPlanForm" role="form" class=".form-inline informationArticleTitle"><br>
            <div class="form-group">
                <div class="col-md-12">
                    
                    <div class="form-group row">
                        <label for="inputKey" class="col-md-3 control-label">Nombre del Plan</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="name" value="{{name}}" id="name" placeholder="Nombre del plan">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputKey" class="col-md-1 control-label">Precio</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" name="price" value="{{price}}" id="price" placeholder="Precio Ej: 30000">
                        </div>
                
                        <label for="inputKey" class="col-md-4 control-label">Horas a la Semana</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="hoursPerWeek" value="{{hoursPerWeek}}" id="hoursPerWeek" placeholder="1-X horas por semana">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label for="inputValue" class="col-md-2 control-label">Descripción</label>
                        <div class="col-md-10">
                            <textarea class="form-control" rows="3" maxlength="40" value="{{description}}" name="description" id="despcription" placeholder="Descripción">{{description}}</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <br>
        <div class="form-group row">
            <div class="col-md-5">
                <label id="savePlan" class="control-label btn btn-primary">Guardar Plan</label>
            </div>
        </div>
    </div>
</div>
<br>