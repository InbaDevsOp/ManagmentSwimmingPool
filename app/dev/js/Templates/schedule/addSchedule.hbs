<br>
<div class ="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
        
        <form id="addScheduleForm" role="form" class=".form-inline informationArticleTitle"><br>
            <div class="form-group">
                <div class="col-md-12">
                    
                    <div class="form-group row">
                        
                        <label for="inputKey" class="col-md-3 control-label">Nombre del Plan</label>
                        <div class="col-md-5">
                            <input type="text" class="form-control" name="name"  value="{{name}}"" id="name" placeholder="Nombre del plan">
                        </div>
                    </div>

                    <div class="form-group row">
                    <label for="inputValue" class="col-md-3 control-label">Descripción</label>                    
                        <div class="col-md-5">
                            <textarea class="form-control" rows="3" maxlength="40" value="{{description}}" name="description" id="despcription" placeholder="Descripción"></textarea>
                        </div>
                    </div>

                </div>
            </div>
        </form>
        
        <table id= "schedule" class="table table-bordered schedule">
            <thead>
                <tr>
                    <th></th>
                    <th>Lunes</th>
                    <th>Martes</th>
                    <th>Miercoles</th>
                    <th>Jueves</th>
                    <th>Viernes</th>
                    <th>Sabado</th>
                    <th>Domingo</th>
                </tr>
            </thead>
            <tbody>
                {{#each daySections}}
                <tr>
                    <td>{{title}}</td>
                    {{#each daySectionId}}
                    <td id={{this}}></td>
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>
        
        <div class="form-group row">    
            <div class="col-md-5">
                <label id="saveSchedule" class="control-label btn btn-primary">Guardar Horario</label>
            </div>
        </div>
        
    </div>
</div>
<br>